{% extends 'base.html.twig' %}

{% block title %}Hello ProprioChiensController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    #listeGens{display:flex;
    flex-direction:row;
    flex-wrap:wrap;
    }
    .personne{
    border: 1px solid black;
    border-radius: 0.2em;
    margin: 0.5em;
    transition: 0.1s;
    }
    .personne:hover{
transform: rotate(90deg);
    }
</style>

<div class="example-wrapper">
<h1>Voici les chiens et leur propri√©taire </h1>
<div id = "listeGens">
{% for personne in personnes %}
<span class="personne">
    <h2>{{ personne.nom }}</h2>
    <p>{{ personne.age }} ans</p>
    <p>{{ personne.taille}} </p>
    <ul>
        {% for chien in personne.chiens %}
            <li>{{ chien.nom }} {{chien.poid}}kg {{chien.race}}</li>
        {% endfor %}
    </ul>
    </span>
{% endfor %}
</div>
</div>
{% endblock %}
